<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Inventory</title>
    <link rel="stylesheet" href="/css/explore.css">

</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="./AdminHome.html">NileWay</a>
            <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item px-3">
                        <a class="nav-link text-white active" href="#">Inventory</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link text-white" href="#">Status</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link text-white" href="#">Bookings</a>
                    </li>
                </ul>
            </div>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row" id="inventory-container">
            <!-- Cards go here -->
        </div>
    </div>

    <button class="btn floating-btn" onclick="addNewItem()">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle"
            viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
            <path
                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
        </svg>
    </button>

    <script>
        // Dummy data for sample inventory
        const cars = [
            {
                name: "Nissan Sentra",
                year: 2012,
                image: "https://img.carswp.com/nissan/juke/nissan_juke_2013_pictures_7_b.jpg",
                specs: ["5 People", "Hybrid", "6.1km / 1-litre", "Automatic"],
                price: "$440 / month"
            },
            {
                name: "BMW 3 Series",
                year: 2019,
                image: "https://img.carswp.com/nissan/sunny/nissan_sunny_2011_photos_1_b.jpg",
                specs: ["4 People", "Gasoline", "8.2km / 1-litre", "Automatic"],
                price: "$350 / month"
            },
            {
                name: "Volkswagen T-Cross",
                year: 2020,
                image: "https://img.carswp.com/nissan/sentra/photos_nissan_sentra_2012_2_b.jpg",
                specs: ["4 People", "Gasoline", "5.3km / 1-litre", "Automatic"],
                price: "$400 / month"
            }
        ];

        function renderCards() {
            const container = document.getElementById('inventory-container');
            container.innerHTML = '';

            cars.forEach(car => {
                const card = document.createElement('div');
                card.className = 'col-md-4';
                card.innerHTML = `
                    <div class="card mb-4">
                        <img src="${car.image}" class="card-img-top" alt="${car.name}">
                        <div class="card-body">
                            <h5 class="card-title">${car.name}</h5>
                            <span class="badge bg-light text-dark">${car.year}</span>
                            <ul class="list-unstyled mt-2">
                                ${car.specs.map(spec => `<li>${spec}</li>`).join('')}
                            </ul>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="text">${car.price}</h5>
                                <button class="btn">Edit</button>
                            </div>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function addNewItem() {
            alert("Add new car functionality is not implemented yet.");
        }

        // Initial render
        renderCards();
    </script>
</body>

</html>