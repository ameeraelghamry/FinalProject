<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Inventory</title>
    <link rel="stylesheet" href="/css/explore.css">

</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="./AdminHome.html">NileWay</a>
            <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item px-3">
                        <a class="nav-link text-white active" href="#">Inventory</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link text-white" href="#">Status</a>
                    </li>
                    <li class="nav-item px-3">
                        <a class="nav-link text-white" href="#">Bookings</a>
                    </li>
                </ul>
            </div>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row" id="inventory-container">
            <!-- Cards go here -->
        </div>
    </div>

    
    
  <div class="row">
         <% cars.forEach(car => { %>
            <% if(car.available) {%>
                <div class="col-md-3">
                
                    <a href="/api/v1/cars/inside/<%= car._id %>" class="text-decoration-none text-dark">
                    <div class="card mb-4">
                        <img src="<%= car.image %>" class="card-img-top" alt="<%= car.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= car.name %></h5>
                            <span class="badge bg-light text-dark"><%= car.year %></span>
                            <ul class="list-unstyled mt-2">
                                <li>category: <%= car.category %> </li>
                            <li><%= car.capacity %>: People</li>
                            
                            <li><%= car.miles %>:miles</li>
                            
                            </ul>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="text"><%= car.price %>/day</h5>
                                
                            </div>
                        </div>
                    </div>
                    </a>
                </div>
                <% } %> 
            <% }) %>
        </div>
    

</body>

</html>  