<head>
    <link rel="stylesheet" href="/css/navbar.css">
</head>

<div class="navbar">
    <div class="logo">
        <img src="/images/nilewayrental-02.png" alt="logo">
    </div>

    <ul>
        <li><a href="/">
                <%= __("Home") %>
            </a></li>
        <li><a href="/about">
                <%= __("About us") %>
            </a></li>
        <li><a href="/contact">
                <%= __("Contact us") %>
            </a></li>
        <li><a href="/policy">
                <%= __("Policy") %>
            </a></li>



                <% if (!user) { %>
                    <li><a href="/signup"><%=__("Sign Up")%></a></li>
                    <% } else { %>
                    <li><a href="/api/v1/users/logout"><%=__("Logout")></a></li>
                <% } %>
    </ul>

    <!-- Language Switcher -->
    <select name="locale" onchange="window.location.href='/lang/' + this.value;">
        <option value="en" <%=locale==='en' ? 'selected' : '' %>><%= __("English") %>
        </option>
        <option value="fr" <%=locale==='fr' ? 'selected' : '' %>><%= __("FranÃ§ais") %>
        </option>
    </select>

    <!-- Search Form -->
    <form id="search-form" class="search-container" action="/api/v1/cars/search" method="GET">
        <input type="text" placeholder="<%= __('Search for cars...') %>" name="search" id="search-input">
        <button type="submit">
            <%= __("Go") %>
        </button>
    </form>

    <script>
        document.getElementById('search-form').addEventListener('submit', function (e) {
            const searchInput = document.getElementById('search-input');
            if (searchInput.value) {
                searchInput.value = searchInput.value.trim().toLowerCase();
            }
        });
    </script>
</div>