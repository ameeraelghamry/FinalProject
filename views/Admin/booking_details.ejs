<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        // Example booking data (Replace with actual backend data fetch)
        const bookings = {
            "1": {
                car: "Toyota Corolla",
                license: "ABC-1234",
                color: "Silver",
                renter: "John Doe",
                phone: "+123456789",
                email: "johndoe@example.com",
                startDate: "2025-03-20",
                endDate: "2025-03-27",
                price: "$350"
            },
            "2": {
                car: "Honda Civic",
                license: "XYZ-5678",
                color: "Blue",
                renter: "Jane Smith",
                phone: "+987654321",
                email: "janesmith@example.com",
                startDate: "2025-04-01",
                endDate: "2025-04-10",
                price: "$400"
            }
        };

        function loadBookingDetails() {
            const urlParams = new URLSearchParams(window.location.search);
            const bookingId = urlParams.get("bookingId");

            if (bookings[bookingId]) {
                const data = bookings[bookingId];

                document.getElementById("carModel").innerText = data.car;
                document.getElementById("licensePlate").innerText = data.license;
                document.getElementById("color").innerText = data.color;
                document.getElementById("renterName").innerText = data.renter;
                document.getElementById("phone").innerText = data.phone;
                document.getElementById("email").innerText = data.email;
                document.getElementById("startDate").innerText = data.startDate;
                document.getElementById("endDate").innerText = data.endDate;
                document.getElementById("price").innerText = data.price;
            } else {
                document.getElementById("detailsContainer").innerHTML = "<p class='text-danger'>Booking not found.</p>";
            }
        }

        window.onload = loadBookingDetails;
    </script>
</head>

<body>
    <div class="container mt-4">
        <h2 class="mb-4">Booking Details</h2>
        <div class="card">
            <div class="card-body" id="detailsContainer">
                <h5>Car Details:</h5>
                <p><strong>Model:</strong> <span id="carModel"></span></p>
                <p><strong>License Plate:</strong> <span id="licensePlate"></span></p>
                <p><strong>Color:</strong> <span id="color"></span></p>

                <h5>Renter Details:</h5>
                <p><strong>Name:</strong> <span id="renterName"></span></p>
                <p><strong>Phone:</strong> <span id="phone"></span></p>
                <p><strong>Email:</strong> <span id="email"></span></p>

                <h5>Rental Details:</h5>
                <p><strong>Start Date:</strong> <span id="startDate"></span></p>
                <p><strong>End Date:</strong> <span id="endDate"></span></p>
                <p><strong>Price:</strong> <span id="price"></span></p>

                <a href="rented.html" class="btn btn-secondary mt-3">Back to Bookings</a>
            </div>
        </div>
    </div>
</body>

</html>